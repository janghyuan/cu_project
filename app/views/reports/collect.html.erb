<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">周报汇总</div>
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <td width="10%">姓名</td>
              <td width="60%">周报內容</td>
              <td>提交时间</td>
              <td>周数</td>
            </tr>
          </thead>
          
          <tbody>
            <% @reports.each do |report| %>
              <tr>
                <td><%= report.user.nickname %></td> 
                <td><%= markdown(report.content).html_safe %></td>
                <td><%= report.created_at %></td>
                <td>第 <%= report.created_at.strftime("%U").to_i + 1 %> 周</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<%= will_paginate @reports %>