<h1>成員周報匯總</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <td width="10%">姓名</td>
      <td width="60%">周報內容</td>
      <td>提交時間</td>
      <td>時間周數</td>
    </tr>
  </thead>
  
  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.user.name %></td> 
        <td><%= markdown(report.content).html_safe %></td>
        <td><%= report.created_at %></td>
        <td>第 <%= report.created_at.strftime("%U").to_i + 1 %> 周</td>
      </tr>
    <% end %>
  </tbody>
</table>