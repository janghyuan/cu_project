<div class="row">
  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">交付中心成员列表 &#9679; 共有成员 <%= User.count %> 位</div>
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <td>用户名</td>
              <td>真实姓名</td>
              <td>电子邮件</td>
              <td>周报</td>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.name %></td>
                <td><%= user.nickname %></td>
                <td><%= user.email %></td>
                <td><%= link_to '查看周报', user_reports_url(user) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <%= will_paginate @users %>
  </div>
  <div class="col-md-4">
    <%= render 'layouts/sidebar' %>
  </div>
</div>
